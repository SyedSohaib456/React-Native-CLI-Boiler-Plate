{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~core/*": [
        "src/core/*"
      ],
      "~components/*": [
        "src/core/components/*"
      ],
      "~theme/*": [
        "src/theme/*"
      ],
      "~app/*": [
        "src/app/*"
      ],
      "~screens/*": [
        "src/app/screens/*"
      ],
      "~assets/*": [
        "assets/*"
      ],
      "~utils/*": [
        "src/utils/*"
      ],
      "~hooks/*": [
        "src/core/hooks/*"
      ],
      "~zustand/*": [
        "src/core/zustand/*"
      ]
    },
    "types": ["nativewind/types"]
  }
}
